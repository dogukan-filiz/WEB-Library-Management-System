<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Yönetim Sistemi</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body style="min-height: 100%; display: flex; flex-direction: column;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book-reader me-2"></i>Kütüphane Yönetim Sistemi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index">
                                <i class="fas fa-book me-1"></i>Kitaplar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Seats" asp-action="Index">
                                <i class="fas fa-chair me-1"></i>Oturma Yerleri
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user me-1"></i>Profilim
                            </a>
                        </li>
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-user-shield me-1"></i>Admin Paneli
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <span class="text-white me-3">
                                <i class="fas fa-user-circle me-1"></i>@Context.Session.GetString("UserName")
                            </span>
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Çıkış
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="flex: 1;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container text-center">
            <p class="mb-1">&copy; 2025 Kütüphane Yönetim Sistemi - Tüm Hakları Saklıdır</p>
            <p class="mb-0"><small>Doğukan Filiz - Bilgisayar Mühendisliği</small></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
