@model IEnumerable<WEB_Library_Management_System.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-users"></i> Kullanıcı Yönetimi</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Rol</th>
                            <th>Durum</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>@(user.PhoneNumber ?? "-")</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">Yönetici</span>
                                    }
                                    else if (user.Role == "Student")
                                    {
                                        <span class="badge bg-info">Öğrenci</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@user.Role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (user.Role != "Admin")
                                    {
                                        @if (user.IsActive)
                                        {
                                            <button class="btn btn-sm btn-warning" onclick="toggleUserStatus(@user.Id, false)" title="Pasif Yap">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-success" onclick="toggleUserStatus(@user.Id, true)" title="Aktif Yap">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-danger" onclick="deleteUser(@user.Id, '@user.FirstName @user.LastName')" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Admin</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function toggleUserStatus(userId, activate) {
            const action = activate ? 'aktif' : 'pasif';
            if (!confirm(`Bu kullanıcıyı ${action} yapmak istediğinizden emin misiniz?`)) {
                return;
            }

            try {
                const response = await fetch('/api/AdminApi/toggle-user-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        userId: userId,
                        isActive: activate
                    })
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Hata: ' + (result.message || 'İşlem başarısız oldu'));
                }
            } catch (error) {
                console.error('Hata:', error);
                alert('İşlem sırasında bir hata oluştu.');
            }
        }

        async function deleteUser(userId, userName) {
            if (!confirm(`"${userName}" kullanıcısını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!`)) {
                return;
            }

            try {
                const response = await fetch(`/api/AdminApi/delete-user/${userId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Hata: ' + (result.message || 'Kullanıcı silinemedi'));
                }
            } catch (error) {
                console.error('Hata:', error);
                alert('Silme işlemi sırasında bir hata oluştu.');
            }
        }
    </script>
}
