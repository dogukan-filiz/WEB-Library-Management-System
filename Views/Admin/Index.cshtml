@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container py-4">
    <h1 class="mb-4"><i class="fas fa-user-shield"></i> Admin Paneli</h1>

    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Toplam Kitap</h6>
                            <h2 class="mb-0">@ViewBag.TotalBooks</h2>
                        </div>
                        <i class="fas fa-book fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Toplam Kullanıcı</h6>
                            <h2 class="mb-0">@ViewBag.TotalUsers</h2>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Aktif Kiralama</h6>
                            <h2 class="mb-0">@ViewBag.ActiveRentals</h2>
                        </div>
                        <i class="fas fa-book-reader fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Yönetim Menüsü -->
    <div class="row">
        <div class="col-md-4 mb-3">
            <a asp-action="Users" class="text-decoration-none">
                <div class="card hover-card">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-4x text-primary mb-3"></i>
                        <h5>Kullanıcı Yönetimi</h5>
                        <p class="text-muted">Kullanıcıları görüntüle ve yönet</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="Books" class="text-decoration-none">
                <div class="card hover-card">
                    <div class="card-body text-center">
                        <i class="fas fa-book fa-4x text-success mb-3"></i>
                        <h5>Kitap Yönetimi</h5>
                        <p class="text-muted">Kitapları görüntüle ve düzenle</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="Rentals" class="text-decoration-none">
                <div class="card hover-card">
                    <div class="card-body text-center">
                        <i class="fas fa-exchange-alt fa-4x text-warning mb-3"></i>
                        <h5>Kiralama Yönetimi</h5>
                        <p class="text-muted">Aktif kiralamaları görüntüle</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="Reservations" class="text-decoration-none">
                <div class="card hover-card">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-check fa-4x text-info mb-3"></i>
                        <h5>Rezervasyon Yönetimi</h5>
                        <p class="text-muted">Oturma yeri rezervasyonları</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <div class="card hover-card">
                    <div class="card-body text-center">
                        <i class="fas fa-home fa-4x text-secondary mb-3"></i>
                        <h5>Ana Sayfaya Dön</h5>
                        <p class="text-muted">Kullanıcı arayüzüne git</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
</style>
