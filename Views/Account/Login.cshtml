@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="login-container">
        <h2 class="text-center mb-4">Giriş Yap</h2>
        
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Test Hesapları Bilgisi -->
        <div class="alert alert-info">
            <h6 class="alert-heading"><i class="fas fa-info-circle"></i> Test Hesapları</h6>
            <hr>
            <p class="mb-1"><strong>Admin Hesabı:</strong></p>
            <ul class="mb-2">
                <li>Email: <code>admin@library.com</code></li>
                <li>Şifre: <code>Admin123!</code></li>
            </ul>
            <p class="mb-1"><strong>Öğrenci Hesabı:</strong></p>
            <ul class="mb-0">
                <li>Email: <code>user@library.com</code></li>
                <li>Şifre: <code>User123!</code></li>
            </ul>
        </div>

        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label for="email" class="form-label">E-posta</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>
    </div>
</div>
